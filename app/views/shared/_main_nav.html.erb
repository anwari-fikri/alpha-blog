<div class="sticky-top overflow-auto vh-100">
  <h2>ALPHA BLOG</h2>
  <ul class="list-group mt-3">
    <%= link_to "Home", articles_path, class: "list-group-item #{"active" if current_page?(articles_path)}" %>
    <%= link_to "Users", users_path, class: "list-group-item #{"active" if current_page?(users_path)}" %>
    <%= link_to "Categories", categories_path, class: "list-group-item #{"active" if current_page?(categories_path)}" %>
    <%= link_to "Profile", current_user, class: "list-group-item #{"active" if current_page?(current_user)}" %>
  </ul>
  <div class="container position-absolute bottom-0 start-0 mb-4">
    <div class="btn-group dropup">
      <button type="button" class="btn dropdown-toggle text-dark" data-bs-toggle="dropdown" aria-expanded="false">
        <%= current_user.username %>
      </button>
      <ul class="dropdown-menu">
        <%= link_to "Profile", current_user, class: "list-group-item #{"active" if current_page?(current_user)}" %>
        <%= link_to "Log out", logout_path, class: "list-group-item btn-outline-danger", data: { confirm: "Are you sure you want to log out?" }, method: :delete %>
      </ul>
    </div>
  </div>
</div>
