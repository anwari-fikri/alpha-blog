<h2>Topics</h2>
<% @categories.limit(4).each do |category| %>
  <%= link_to category_path(category), style: "text-decoration: none;", :action => 'go' do %>
    <div class="card">
      <div class="card-body">
        <h6><%= category.name %></h6>
      </div>
    </div>
  <% end %>
<% end %>
<h5 class="mt-2"><%= link_to "See more", categories_path, style: "text-decoration: none" %></h5>