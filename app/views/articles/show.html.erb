<div class="container mb-5">
  <div class="row">
    <div class="col-2">
      <%= render 'shared/main_nav' %>
    </div>

    <div class="col-7">
      <%= render "shared/return_nav", obj: articles_path, txt: "Article" %>
      <div class="card container mt-4">
        <div class="card-body">
          <%= render @article.categories %>
          <h4><%= @article.title %></h4>
          <h6 class="card-subtitle mb-2 text-muted">@<%= link_to @article.user.username, user_path(@article.user), class: "text-muted", style: "text-decoration: none; font-weight: bold" %> Â· <%= time_ago_in_words(@article.updated_at) %> ago</h6>
          <hr>
          <p><pre><%= @article.description %></pre></p>
        </div>
      </div>
      <div class="container mt-5 mb-5">
        <div class="btn-group d-flex justify-content-center"" role="group" aria-label="Basic mixed styles example">
          <%= link_to "Return", articles_path, class: "btn btn-primary" %>
          <% if logged_in? && (@article.user == current_user || current_user.admin? )%>
            <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?" }, class: "btn btn-outline-danger" %>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="col">
      <%= render 'shared/side_nav' %>
    </div>
  </div>
</div>


