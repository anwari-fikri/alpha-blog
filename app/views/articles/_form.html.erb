<div class="container mt-3">
  <%= form_with model: @article do |form| %>
    <div>
      <%= form.label :title, class: "h5 form-label" %><br>
      <%= form.text_field :title, class: "form-control", id: "exampleFormControlInput1" %>
    </div>
  
    <div>
      <%= form.label :description, class: "h5 form-label" %><br>
      <%= form.text_area :description, class: "form-control mh-100", id: "exampleFormControlTextarea1", rows: "20" %>
    </div>

    <div>
      <%= form.label :category, class: "h5 form-label" %><br>
      <%= form.collection_select(:category_ids, Category.all, :id, :name,
            { include_blank: 'None' }, { multiple: true, class: "form-control mh-100" }) %>
    </div>
  
    <div class="mt-5">
      <div class="btn-group" role="group" aria-label="Basic mixed styles example">
        <%= link_to "Return", articles_path, class: "btn btn-outline-warning" %>
        <%= form.submit class: "btn btn-primary", data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
</div>