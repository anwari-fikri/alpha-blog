
<div class="container mb-5">
  <div class="row">
    <div class="col-2">
      <h3><%= session[:username] %></h3>
      <%= link_to "Log in", login_path %>
      <%= link_to "Log out", logout_path, method: :delete %>
    </div>
    <div class="col-7">
      <div class="container border pt-2 pb-2">
        <h2>Latest Articles</h2>
      </div>
      <div class="border pb-3">
        <%= render 'small_form' %>
        <%= render 'article_list' %>
        <div class="d-flex justify-content-center bd-highlight mt-3">
          <ul class="pagination">
            <li><%= will_paginate @articles, class: "page-link" %></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="container border mt-5 mb-5 pt-2 pb-2">
        <%= render 'users/user_list_small' %>
      </div>
      
    </div>
  </div>
</div>
