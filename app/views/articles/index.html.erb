<div class="container mb-5">
  <div class="row">
    <div class="col-2">
      <%= render 'shared/main_nav' %>
    </div>

    <div class="col-7">
      <div class="container border sticky-top bg-light pt-2 pb-2">
        <h2>Latest Articles</h2>
      </div>
      <div class="border pb-3">
        <%= render 'small_form' %>
        <%= render 'article_list' %>
        <div class="d-flex justify-content-center bd-highlight mt-3">
          <ul class="pagination">
            <li><%= will_paginate @articles, class: "page-link" %></li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="col">
      <%= render 'shared/side_nav' %>
    </div>
  </div>
</div>


